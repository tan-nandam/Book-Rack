<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Book Rack</title>
<link rel="icon" type="image/ico" href="/assets/images/logo.png">
   <link rel="stylesheet" type="text/css" href="/assets/styles/style.css">
   <script type="text/javascript" src="/assets/javascript/modernizr.js"></script>
   <script type="text/javascript" src="/assets/javascript/imagbg.js"></script>
</head>
<body>

  <div class="first">
	<div class="st st1 st2">


        <% if(login.length!=0){%>
          <% include ./partials/headerLogin.ejs %>
          <% include ./partials/logout.ejs %>
      <% }
      else{%>
        <% include ./partials/header.ejs %>
        <% include ./partials/user-navigation.ejs %>
      <% }%>
       <% include partials/site-navigation.ejs %>

    <div class="absolute">
			<main>
				<section>
					<ul class="breadcrumb">
  						<li><a href="/">Home</a></li>
  						<li><a href="/categories">Categories</a></li>
  						<li></li>
					</ul>
          <%var CategoryTypes=[];
          data.forEach(function(element){%>

          <% if(!CategoryTypes.includes(element.catalogCategory))
          {
          CategoryTypes.push(element.catalogCategory);%>

          <%}
          });%>

          <%
          while(CategoryTypes.length!=0)
          {
          var category=CategoryTypes[0];

          CategoryTypes.splice(0,1);
          %>

          <article id="backgroundclip">
      						<nav id="leftnavs">

                  <div class="newstyles">

      							<h2 class="cato"><%=category%></h2>

                  <%data.forEach(function(element){
                  if(element.catalogCategory === category){%>
                    <b><a href="/categories/viewCatalog/<%= element.itemCode %>"><%= element.itemName%></a></b>
                    <%}%>
                    <%})}%>
                  </div>
      						</nav>


      					</article>

				</section>
			</main>
		</div>

<% include partials/footer.ejs %>
</div>
</div>
</body>
</html>
